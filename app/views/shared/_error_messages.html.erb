<% errors = locals[:object].errors %>
<% if errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(errors.count, "error") %>.
    </div>
    <ul>
      <% errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

