<header class="navbar navbar-fixed-top">
  <div class="container-barra">
    <%= link_to image_tag("logo_agropazco_trans.png", class:"logo_image"), root_path, id: "logo" %>
    <nav id="barra">
      <ul class="nav navbar-nav">
        <li class="link"><%= link_to "Publicaciones", root_path,class:"link2" %></li>
        <li class="link"><%= link_to "Municipios top", root_path,class:"link2" %></li>
        <li class="link"><%= link_to "Lo nuevo", root_path,class:"link2" %></li>
        <li class="link"><%= link_to "Ayuda", root_path,class:"link2" %></li>
        <% if logged_in? && current_user.admin? %>
        <li class="link"><%= link_to "Reportes", post_reports_url , class: "link2"%></li>
        <%end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="link"><%= link_to "Usuarios", users_path, class:"link2" %></li>
          <li class="dropdown">
            <a href="#" class="link2" data-toggle="dropdown">
              Cuenta <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user %></li>
              <li><%= link_to "Configuración", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li class="link">
                <%= link_to "Cerrar sesión", logout_path, method: :delete, class:"link2" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="link"><%= link_to "Iniciar sesión", login_path, class:"link2" %></li>
          <li class="link"><%= link_to "Registro", signup_path,class:"link2"  %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>


