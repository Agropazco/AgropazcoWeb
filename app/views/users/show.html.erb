<% provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%if logged_in? and @user.id==current_user.id %>
        <h3>
            <%= link_to "Editar datos", edit_user_path(current_user), id:"titleP" %>
        </h3>
      <%end%>
    </section>
    <section class="userData">
      <div class = "miniData">
        <h3>Correo:</h3>
        <div class = "content">
          <%= @user.email %>
        </div>
      </div>
      <div class = "miniData">
        <h3>Telefono:</h3>
        <div class = "content">
          <%= @user.tel %>
        </div>
      </div>
      <div class = "miniData">
        <h3>Telefono Auxiliar:</h3>
        <div class = "content">
          <%= @user.tel_op %>
        </div>
      </div>
      <div class = "miniData">
        <h3>Direccion:</h3>
        <div class = "content">
          <%= @user.address %>
        </div>
      </div>
      <div class = "miniData">
        <h3>Ciudad:</h3>
        <div class = "content">
          <%= @user.city %>
        </div>
      </div>
    </section>
  </aside>
  <div class = "col-md-8">
    <% if @user.posts.any? %>
      <h3> Posts (<%= @user.posts.count %>)</h3>
      <ol class = "posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
      <% end %> 
  </div>
</div>

