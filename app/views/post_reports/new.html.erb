<% provide(:title, 'Reportar publicación') %>


<%= form_for(@post_report) do |f| %>

  <%= render 'shared/error_messages', locals: { object: @post_report } %>

  <%= f.label :topic, "Motivo de reporte" %>
	<%= f.text_field :topic, class: 'form-control' %>
	
	<%= f.label :message, "Justificación" %>
	<%= f.text_area :message, class: 'form-control' %>

  <%= f.submit "Enviar", class: "btn btn-primary" %>
<% end %>

